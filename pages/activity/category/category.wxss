.scroll-view-container {
  display: flex;
  position: fixed;
  width: 100%;
  height: 100%;
}
.left_bar {
  background-color: #F7F7F7;
}

.van-sidebar-item {
  background-color: #F7F7F7;
  line-height: 160rpx;
  text-align: center;
}

.right_list {
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  width: 590rpx; 
  box-sizing: border-box
}

.right_item {
  display: flex; 
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  width: 170rpx; 
  height: 200rpx; 
  box-sizing: border-box
}

.right_image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 10rpx;
}

.right_text {
  font-size: 28rpx;
}
